<UserControl x:Class="BankSystem.Client.WPF.UI.AddAndTake.AddAndTakeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankSystem.Client.WPF.UI.AddAndTake"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" x:Name="UserList" HorizontalAlignment="Stretch" VerticalAlignment="Top" DisplayMemberPath="Description" SelectedItem="{Binding SelectedAccount}" ItemsSource="{Binding UsersAccount}"/>
        <Button Grid.Row="2" Grid.Column="1" x:Name="Add" Content="Пополнить 100$" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding AddCashCommand}" />
        <Button Grid.Row="2" Grid.Column="2" x:Name="Take" Content="Снять 100$" HorizontalAlignment="Right" VerticalAlignment="Top" Command="{Binding TakeCashCommand}" />
    </Grid>
</UserControl>
