<UserControl x:Class="BankSystem.Client.WPF.UI.UtilUI.GetNumber.GetNumber"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankSystem.Client.WPF.UI.UtilUI.GetNumber"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <Label Content="Get number: " HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center"/>

        <TextBox Grid.Column="1" HorizontalAlignment="Stretch" Grid.Row="1" Text="{Binding Number}" VerticalAlignment="Center"/>

        <Button Grid.Column="1" Content="Get number" HorizontalAlignment="Stretch" Grid.Row="2" VerticalAlignment="Center" Command="{Binding GetNumber}" />
        
    </Grid>
    
    
    
</UserControl>
