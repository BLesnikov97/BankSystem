<UserControl x:Class="BankSystem.Client.WPF.UI.Transfer.TransferControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="BankSystem.Client.WPF.UI.Transfer"
             xmlns:er="clr-namespace:BankSystem.Client.WPF.Command.Ruls"                
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" DisplayMemberPath="LastName" SelectedItem="{Binding FromUser}" ItemsSource="{Binding Users}" />
        <ComboBox Grid.Row="1" Grid.Column="2" VerticalAlignment="Top" DisplayMemberPath="LastName" SelectedItem="{Binding ToUser}" ItemsSource="{Binding Users}" />

        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="user1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" DisplayMemberPath="Description" SelectedItem="{Binding FromAccount}" ItemsSource="{Binding FromAccounts}" />
        <ComboBox Grid.Row="1" Grid.Column="2" x:Name="user2" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" DisplayMemberPath="Description" SelectedItem="{Binding ToAccount}" ItemsSource="{Binding ToAccounts}" />

        <TextBox  Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" VerticalAlignment="Top" Margin="0,28,0,0" >
            <TextBox.Text>
                <Binding Path="Sum" ValidatesOnDataErrors="True" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <er:MinimumCharacterRule MinimumCharacters="3" />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="From user:" VerticalAlignment="Bottom"  Grid.Column="1" Height="40" Width="40" />
        <TextBlock Grid.Column="2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="To user:" VerticalAlignment="Bottom" Height="40" Width="40" />

        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="From account:" VerticalAlignment="Center" Grid.Row="1"  Grid.Column="1" Height="40" Width="40" />
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="To account:" VerticalAlignment="Center" Grid.Row="1"  Grid.Column="2" Height="40" Width="40" />

        <TextBlock HorizontalAlignment="Right" Text="Sum: " VerticalAlignment="Top" Grid.Row="2"  Grid.Column="0" Margin="0,38,0,0" />


        <Button Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Content="Transfer" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Command="{Binding TransferCommand}" />

    </Grid>
</UserControl>
