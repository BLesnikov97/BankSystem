<UserControl x:Class="BankSystem.Client.WPF.UI.StatusAccaunt.StatusAccountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankSystem.Client.WPF.UI.StatusAccaunt"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="UserAccaunt" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" DisplayMemberPath="FullName" SelectedItem="{Binding SelectedAccount}" ItemsSource="{Binding Accounts}" />
        <Button Grid.Row="1" Grid.Column="1" x:Name="Info" Content="Проверить остаток" HorizontalAlignment="Stretch" VerticalAlignment="Center" Command="{Binding StatusCommand}"/>
        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="TextBlockInfo" HorizontalAlignment="Stretch" VerticalAlignment="Top" Text="{Binding СheckAmount}" />
    </Grid>
</UserControl>
